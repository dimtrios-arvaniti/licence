<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.dim.licence">

    <!-- Network access permission -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- Files permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>-->
    <!-- CAMERA PERMISSIONS -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- CAMERA FEATURES -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>
    <!--
        Location permission
        (ACCESS_FINE_LOCATION contains ACCESS_COARSE_LOCATION by default)
        <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    -->


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Needed for location
        <uses-library android:name="com.google.android.maps"/>
        -->

        <!-- File Provider for photos ! -->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">
            </meta-data>
        </provider>

        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--
        IMPORTANT : Cave and vigneron activities must have a Style with NoActionBar true !!
         -->
        <activity
            android:name=".VigneronActivity"
            android:label="@string/title_activity_vigneron"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
        </activity>
        <activity
            android:name=".CaveActivity"
            android:label="CaveActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan">
        </activity>
    </application>

</manifest>