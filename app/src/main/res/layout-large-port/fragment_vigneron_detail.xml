<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".fragments.VigneronDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19">

        <GridLayout
            android:id="@+id/dtl_vigneron_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:columnCount="2"
            android:rowCount="12"
            android:useDefaultMargins="false">


            <TextView
                android:id="@+id/dtl_vigneron_label_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:text="@string/libelle"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_label_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_domaine_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:text="@string/appelation"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_domaine_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_fixe_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:text="@string/fixe"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_fixe_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_mobile_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:text="@string/mobile"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_mobile_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_mail_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="4"
                android:text="@string/mail"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_mail_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="4"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_fax_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:text="@string/fax"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_fax_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_ville_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="6"
                android:text="@string/ville"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_ville_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="6"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse1_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="7"
                android:text="@string/codepost"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse1_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="7"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse2_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="8"
                android:text="@string/adresse"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse2_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="8"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse3_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="9"
                android:text="@string/adresse"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse3_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="9"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_complement_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="10"
                android:text="@string/complement"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_complement_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="10"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_comment_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="11"
                android:text="@string/comment"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_vigneron_comment_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="11"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>
        </GridLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/supprimer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEdit"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/editer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnDel"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>