<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".fragments.CaveDetailFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/li_border">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/dtl_cave_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/dtl_cave_label_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/dtl_cave_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/dtl_cave_favoris_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/btn_star_big_on"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/dtl_cave_favoris_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/btn_star_big_off"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <GridLayout
            android:id="@+id/dtl_cave_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:columnCount="2"
            android:rowCount="9"
            android:useDefaultMargins="false">


            <TextView
                android:id="@+id/dtl_cave_type_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:text="@string/type_de_vin"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_type_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/dtl_cave_appelation_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:text="@string/appelation"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_appelation_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_prix_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:text="@string/prix"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_prix_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_annee_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="4"
                android:text="@string/annee"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_annee_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="4"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_annee_max_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:text="@string/annee_max"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_annee_max_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_vigneron_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="6"
                android:text="@string/vigneron"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_vigneron_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="6"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_qte_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="7"
                android:text="@string/quantite"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_qte_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="7"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_commentaire_desc"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_row="8"
                android:text="@string/comment"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/dtl_cave_commentaire_value"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_margin="5dp"
                android:layout_row="8"
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>

        </GridLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cave_btnDel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/supprimer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cave_btnEdit"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cave_btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/editer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cave_btnDel"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>