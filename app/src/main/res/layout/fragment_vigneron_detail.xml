<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".fragments.VigneronDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <GridLayout
            android:id="@+id/dtl_vigneron_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:useDefaultMargins="false"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:columnCount="2"
            android:rowCount="12">


                <TextView
                    android:id="@+id/dtl_vigneron_label_desc"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:layout_gravity="end"
                    android:textSize="20sp"
                    android:text="@string/libelle"/>

                <TextView
                    android:id="@+id/dtl_vigneron_label_value"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/dtl_vigneron_domaine_desc"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:layout_gravity="end"
                    android:textSize="20sp"
                    android:text="@string/appelation" />

                <TextView
                    android:id="@+id/dtl_vigneron_domaine_value"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/dtl_vigneron_fixe_desc"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:layout_gravity="end"
                    android:textSize="20sp"
                    android:text="@string/fixe" />

                <TextView
                    android:id="@+id/dtl_vigneron_fixe_value"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/dtl_vigneron_mobile_desc"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:layout_gravity="end"
                    android:textSize="20sp"
                    android:text="@string/mobile" />

                <TextView
                    android:id="@+id/dtl_vigneron_mobile_value"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/dtl_vigneron_mail_desc"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:layout_gravity="end"
                    android:textSize="20sp"
                    android:text="@string/mail"/>

                <TextView
                    android:id="@+id/dtl_vigneron_mail_value"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="start"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/dtl_vigneron_fax_desc"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:text="@string/fax"/>

            <TextView
                android:id="@+id/dtl_vigneron_fax_value"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/dtl_vigneron_ville_desc"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:text="@string/ville"/>

            <TextView
                android:id="@+id/dtl_vigneron_ville_value"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse1_desc"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:text="@string/codepost"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse1_value"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse2_desc"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:text="@string/adresse"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse2_value"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse3_desc"
                android:layout_row="9"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:text="@string/adresse"/>

            <TextView
                android:id="@+id/dtl_vigneron_adresse3_value"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/dtl_vigneron_complement_desc"
                android:layout_row="10"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:text="@string/complement"/>

            <TextView
                android:id="@+id/dtl_vigneron_complement_value"
                android:layout_row="10"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>

        <TextView
                android:id="@+id/dtl_vigneron_comment_desc"
                android:layout_row="11"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:text="@string/comment"/>

            <TextView
                android:id="@+id/dtl_vigneron_comment_value"
                android:layout_row="11"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>
        </GridLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/supprimer"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEdit"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/editer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnDel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>