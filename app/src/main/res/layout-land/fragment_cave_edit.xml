<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    tools:context=".fragments.CaveEditFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/li_border">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/edt_cave_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/edt_cave_label_il"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:hint="@string/libelle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edt_cave_image"
            app:layout_constraintTop_toTopOf="parent">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_cave_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="40sp"
                android:textStyle="bold"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edt_cave_favorisOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/star_big_on"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/edt_cave_favorisOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@android:drawable/star_big_off"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <android.support.v7.widget.GridLayout
            android:id="@+id/edt_cave_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            app:columnCount="2"
            app:rowCount="13">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/edt_cave_type"
                android:spinnerMode="dialog"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="2"
                app:layout_row="0"
                app:layout_rowWeight="2"
                />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/edt_cave_appelation"
                android:spinnerMode="dialog"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="2"
                app:layout_row="2"
                app:layout_rowSpan="2"
                app:layout_rowWeight="2"/>


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/edt_cave_vigneron"
                android:spinnerMode="dialog"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_columnWeight="3"
                app:layout_row="4"
                app:layout_rowSpan="2"
                app:layout_rowWeight="2"/>

            <Button
                android:id="@+id/edt_cave_plus"
                android:text="@string/ajouter_vigneron"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_columnWeight="1"
                app:layout_row="4"
                app:layout_rowSpan="2"
                app:layout_rowWeight="2"/>


            <android.support.design.widget.TextInputLayout
                android:hint="@string/annee"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="2"
                app:layout_row="6"
                app:layout_rowSpan="1"
                app:layout_rowWeight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_cave_annee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:hint="@string/annee_max"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="2"
                app:layout_row="7"
                app:layout_rowWeight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_cave_annee_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:hint="@string/prix"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="2"
                app:layout_row="8"
                app:layout_rowWeight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_cave_prix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:hint="@string/quantite"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="2"
                app:layout_row="9"
                app:layout_rowWeight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_cave_qte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:inputType="number"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:hint="@string/comment"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="2"
                app:layout_row="10"
                app:layout_rowWeight="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edt_cave_commentaire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="1"
                    android:layout_gravity="start"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"/>

            </android.support.design.widget.TextInputLayout>


        </android.support.v7.widget.GridLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="2"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cave_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/annuler"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSave"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/cave_btnSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sauvegarder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCancel"
            app:layout_constraintTop_toTopOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>